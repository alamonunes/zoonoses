<!DOCTYPE html>
<html>
<head>
<title>Centro Zoonoses</title>
<%= stylesheet_link_tag "cuidadors.css" %>
</head>
<body>

<div class="imagem"> 
    <h3>Centro Zoonoses</h3>
    <%= image_tag("logo.png", :alt => "class") %>
</div>

<div class="welcome"> 
<h1>Welcome <%= current_cuidador.nome %>!</h1>
 <%= link_to "Log out", destroy_cuidador_session_path, :method => :delete, class:"btn btn-primary btn-lg" %>
</div>

    <p id="notice"><%= notice %></p>

  <h1 class="title">Cuidadores</h1>

 <div class="table-func">
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">CPF</th>
            <th scope="col">NOME</th>
            <th scope="col">RG</th>
            <th scope="col">SEXO</th>
            <th scope="col">TELEFONE</th>
            <th scope="col">DATA</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @cuidadors.each do |cuidador| %>
      <tr>
        <td><%= cuidador.cpf %></td>
        <td><%= cuidador.nome %></td>
        <td><%= cuidador.rg %></td>
        <td><%= cuidador.sexo %></td>
        <td><%= cuidador.telefone %></td>
        <td><%= cuidador.data %></td>
        <td><%= link_to 'Show', cuidador %></td>
        <td><%= link_to 'Edit', edit_cuidador_path(cuidador) %></td>
        <td><%= link_to 'Destroy', cuidador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
        </tbody>
    </table>

 </div>

</body>
</html>
