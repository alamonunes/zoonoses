<!<!DOCTYPE html>
<html>
<head>
<title>Centro Zoonoses</title>
<%= stylesheet_link_tag "funcionarios.css" %>
</head>
<body>

<div class="imagem"> 
    <h3>Centro Zoonoses</h3>
    <%= image_tag("logo.png", :alt => "class") %>
</div>

<div class="welcome"> 
<%= link_to "Log out", destroy_funcionario_session_path, :method => :delete, class:"btn btn-primary btn-lg" %>
</div>

    <p id="notice"><%= notice %></p>

  <h1 class="title">Funcionario <%= current_funcionario.nome %></h1>

 <div class="table-func">
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">CPF</th>
            <th scope="col">NOME</th>
            <th scope="col">RG</th>
            <th scope="col">SEXO</th>
            <th scope="col">TELEFONE</th>
            <th scope="col">DATA</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
      <tr>
        <td><%= current_funcionario.cpf %></td>
        <td><%= current_funcionario.nome %></td>
        <td><%= current_funcionario.rg %></td>
        <td><%= current_funcionario.sexo %></td>
        <td><%= current_funcionario.telefone %></td>
        <td><%= current_funcionario.data %></td>
        <td><%= link_to 'Show', current_funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(current_funcionario) %></td>
        <%# <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } </td>%>
      </tr>
        </tbody>
    </table>

 </div>

</body>
</html>
